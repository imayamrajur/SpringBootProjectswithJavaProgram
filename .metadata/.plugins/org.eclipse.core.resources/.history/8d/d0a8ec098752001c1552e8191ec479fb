package com.raju.stars;

public class DiamentStars {

	public static void main(String[] args) {
		int row = 5, k = 0;
		for (int space = 1; space <= row; ++space, k = 0) {
			for (int sp = 1; sp <= row - space; ++sp) {
				System.out.print("");
			}
			while (k != 2 * space - 1) {
				System.out.print("*");
				++k;
			}
			System.out.println("");
		}

	}

}
